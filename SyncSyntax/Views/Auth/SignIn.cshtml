 @model SignInViewModel;

@{
    ViewData["Title"] = "SignIn";
}

 
<div id="signin-wrapper" class="d-flex flex-column flex-md-row align-items-center justify-content-center min-vh-100 bg-white overflow-hidden">
    <!-- LEFT FORM -->
    <div class="col-md-5 bg-white rounded-4 shadow p-4 m-2 z-2">
        <form asp-action="SignIn" method="post" novalidate>

            <!-- Email or Username -->
            <div class="form-group mb-4 position-relative">
                <label asp-for="EmailOrUsername" class="form-label fw-semibold text-secondary">Email or Username</label>
                <div class="position-relative">
                    <input asp-for="EmailOrUsername"
                           class="form-control form-control-lg rounded-3 border-0 ps-5"
                           placeholder="Enter your email or user name"
                           style="font-size: 15px; background-color: #f8f9fa;" />
                    <i class="bi bi-envelope-fill position-absolute top-50 start-0 translate-middle-y ms-3 text-secondary fs-5"></i>
                </div>
                <span asp-validation-for="EmailOrUsername" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="form-group mb-4 position-relative">
                <label asp-for="Password" class="form-label fw-semibold text-secondary">Password</label>
                <div class="position-relative">
                    <input asp-for="Password"
                           type="password"
                           class="form-control form-control-lg rounded-3 border-0 ps-5 pe-5"
                           placeholder="Enter your password"
                           id="registerPassword"
                           style="font-size: 15px; background-color: #f8f9fa;" />

                    <!-- Left Icon -->
                    <i class="bi bi-lock-fill position-absolute top-50 start-0 translate-middle-y ms-3 text-secondary fs-5"></i>

                    <!-- Show Password Toggle -->
                    <span onclick="togglePassword('registerPassword', this)"
                          class="position-absolute top-50 end-0 translate-middle-y me-3"
                          style="cursor: pointer;">
                        <i id="toggleIcon" class="bi bi-eye text-secondary fs-5"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Remember & Forgot -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                <a href="#" class="text-decoration-none small text-primary">Forgot password?</a>
            </div>

            <!-- Sign In Button -->
            <div class="text-center">
                <button type="submit" class="modern-btn w-50">Sign In</button>
            </div>

            <!-- Register -->
            <p class="small fw-bold mt-4 text-center text-primary">
                Don't have an account?
                <a asp-action="SignUp" class="link-danger text-decoration-none">Register</a>
            </p>

        </form>
    </div>


    <!-- RIGHT IMAGES COLLAGE -->
    <div class="col-md-6 position-relative d-none d-md-block">
        <div class="collage-container position-relative">
            <img src="/images/a1.jpg" class="collage-img img1" />
            <img src="/images/a2.jpg" class="collage-img img2" />
            <img src="/images/a4.jpg" class="collage-img img3" />
            <img src="/images/a3.jpg" class="collage-img img4" />
        </div>
    </div>
</div>


<script>
    window.addEventListener("DOMContentLoaded", () => {
        setTimeout(() => {
            document.querySelector(".collage-container")?.classList.add("loaded");
        }, 800);
    });
</script>



<partial name="_ValidationScriptsPartial" />
<script src="~/js/site.js"></script>
<link rel="stylesheet" href="/css/SignIn.css" />