@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
}

<style>
    .profile-picture {
        height: 300px;
        width: 300px;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        border: 1px solid #d4d3d3;
    }
</style>

<form asp-action="SignUp" enctype="multipart/form-data" class="">

    <div class="d-flex justify-content-between col-md-12 align-items-center w-100">

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="email..">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MajorName"></label>
                <input asp-for="MajorName" class="form-control" placeholder="major..">
                <span asp-validation-for="MajorName" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="password..">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="password..">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">SignUp</button>
                <a asp-action="Index" asp-controller="Post" class="btn btn-secondary ms-2">Back</a>
            </div>

        </div>


        <div class="">
            <div class="form-group">
                <img alt="Profile Image" id="ProfilePicture" class="profile-picture" loading="lazy" src="~/images/default-image.jpg" />

                <div class="custom-file my-3">
                    <input type="file" accept=".png,.jpg,.jpeg" asp-for="ProfilePicture" class="custom-file-input imageShow" />
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

</form>


<script>
    document.querySelector(".imageShow").onchange = function(){
        document.getElementById('ProfilePicture').src = window.URL.createObjectURL(this.files[0])
    }
</script>

<partial name="_ValidationScriptsPartial" />
