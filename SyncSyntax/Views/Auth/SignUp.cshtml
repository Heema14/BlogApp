@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
}

<style>
    .profile-picture {
        height: 300px;
        width: 300px;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #0d6efd; /* bootstrap primary color */
        cursor: pointer;
        transition: box-shadow 0.3s ease;
    }

        .profile-picture:hover {
            box-shadow: 0 0 15px #0d6efdaa;
        }
</style>

<div class="container my-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h3 class="mb-0">Create Your Account</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="SignUp" enctype="multipart/form-data" method="post" novalidate>
                <div class="row gy-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email..." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MajorName" class="form-label"></label>
                            <input asp-for="MajorName" class="form-control" placeholder="Major..." />
                            <span asp-validation-for="MajorName" class="text-danger"></span>
                        </div>

                        <div class="mb-3 position-relative">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password..." id="registerPassword" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                            <span onclick="togglePassword('registerPassword', this)" class="position-absolute translate-middle-y pe-3" style="cursor: pointer; top: 62%; right: 4px;">
                                <i class="bi bi-eye fs-5 text-black"></i>
                            </span>
                        </div>


                        <div class="mb-3 position-relative">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password..." id="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                            <span onclick="togglePassword('ConfirmPassword', this)" class="position-absolute translate-middle-y pe-3" style="cursor: pointer; top: 62%; right: 4px;">
                                <i class="bi bi-eye fs-5 text-black"></i>
                            </span>
                        </div>

                        <div class="mt-4 d-flex align-items-center">
                            <button type="submit" class="btn btn-primary me-2">Sign Up</button>
                            <a asp-action="SignIn" asp-controller="Auth" class="btn btn-secondary">Go to login</a>
                        </div>
                    </div>

                    <div class="col-md-6 d-flex flex-column align-items-center">
                        <input asp-for="ProfilePicture" type="file" id="profilePicInput" accept=".png,.jpg,.jpeg" class="d-none" />
                        <label for="profilePicInput" class="mb-0">
                            <img id="ProfilePicture" src="~/images/default-image.jpg" alt="Profile Image" class="profile-picture" loading="lazy" />
                        </label>
                        <small class="text-muted mt-2">Click the image to upload your profile picture (max 2MB)</small>
                        <span asp-validation-for="ProfilePicture" class="text-danger mt-1"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('profilePicInput').onchange = function () {
        if (this.files && this.files[0]) {
            document.getElementById('ProfilePicture').src = window.URL.createObjectURL(this.files[0]);
        }
    };
</script>

<script src="~/js/site.js"></script>
<partial name="_ValidationScriptsPartial" />
