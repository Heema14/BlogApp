<style>
    .content-wrapper {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: Arial, sans-serif;
    }
</style>

@model PostViewModel;

@{
    ViewData["Title"] = "Create Post";
}


<div class="content-wrapper">

    <div class="row">
        <div class="col-12 col-md-6">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-12 col-md-6 text-end">
            <a asp-action="Index" asp-controller="Post" class="btn btn-primary rounded ">Back to List</a>
        </div>
    </div>

    <hr />

    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="Post.Title"></label>
            <input asp-for="Post.Title" class="form-control" />
            <span asp-validation-for="Post.Title" class="text-danger"></span>
        </div>

        <div class="form-group my-2">
            <label asp-for="Post.CategoryId"></label>
            <select asp-for="Post.CategoryId" asp-items="Model.Categories" class="form-control">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Post.Author"></label>
            <input asp-for="Post.Author" class="form-control" />
            <span asp-validation-for="Post.Author" class="text-danger"></span>
        </div>

        <div class="for-group my-2">
            <label asp-for="Post.Content"></label>
            <textarea asp-for="Post.Content" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Post.Content" class="text-danger"></span>
        </div>

        <div class="form-group my-2">
            <label asp-for="FeatureImage"></label>
            <input asp-for="FeatureImage" class="form-control" />
            <span asp-validation-for="FeatureImage" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>

    <hr />

</div>

<partial name="_ValidationScriptsPartial" />

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/8v7ap9no879e3vf48t9bipzno7dfbo8dgefvm9kgcttuz3nu/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
          tinymce.init({
          selector: 'textarea'
        });
    </script>
}

