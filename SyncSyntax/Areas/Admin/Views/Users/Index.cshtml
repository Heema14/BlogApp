@model List<UserWithPostsCountViewModel>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .profile-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 24px;
    }

    .table thead th {
        background-color: #f8f9fa;
        text-align: center;
    }

    .table tbody td {
        vertical-align: middle;
        text-align: center;
    }

    .table tbody tr:hover {
        background-color: #f1f3f5;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
    }

    .table-responsive {
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4">Manage Users</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
        
                    <th>Profile</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Username</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Posts Count</th>

                  
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(Model[i].User.ProfilePicture))
                            {
                                <img src="@Model[i].User.ProfilePicture" class="profile-img" />
                            }
                            else
                            {
                                <div class="profile-img">
                                    <i class="bi bi-person"></i>
                                </div>
                            }
                        </td>
                        <td>@Model[i].User.FirstName @Model[i].User.LastName</td>
                        <td>@Model[i].User.Gender</td>
                        <td>@Model[i].User.UserName</td>
                        <td>@Model[i].User.PhoneNumber</td>
                        <td>@Model[i].User.Email</td>
                        <td>@Model[i].PostsCount</td>  
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
