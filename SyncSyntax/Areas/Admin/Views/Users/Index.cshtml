@model List<AppUser>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .profile-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 24px;
    }

    .table thead th {
        background-color: #f8f9fa;
        text-align: center;
    }

    .table tbody td {
        vertical-align: middle;
        text-align: center;
    }

    .table tbody tr:hover {
        background-color: #f1f3f5;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
    }

    .table-responsive {
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4">Manage Users</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Profile</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Username</th>
                    <th>Phone</th>
                    <th>Email</th>
                    @* <th>Actions</th> *@
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(Model[i].ProfilePicture))
                            {
                                <img src="@Model[i].ProfilePicture" alt="Profile" class="profile-img">
                            }
                            else
                            {
                                <div class="profile-img">
                                    <i class="bi bi-person"></i>
                                </div>
                            }
                        </td>
                        <td>@Model[i].FirstName @Model[i].LastName</td>
                        <td>@Model[i].Gender</td>
                        <td>@Model[i].UserName</td>
                        <td>@Model[i].PhoneNumber</td>
                        <td>@Model[i].Email</td>
                        <td>
                            @* <a class="btn btn-sm btn-primary me-1" href="@Url.Action("Edit", "Users", new { id = Model[i].Id })"> *@
                            @*     <i class="bi bi-pencil-square"></i> *@
                            @* </a> *@
                            @* <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Users", new { id = Model[i].Id })"> *@
                            @*     <i class="bi bi-trash"></i> *@
                            @* </a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
