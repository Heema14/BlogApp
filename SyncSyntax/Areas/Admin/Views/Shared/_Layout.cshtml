
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Blog App</title>
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <!-- Bootstrap & Icons -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!-- JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <style>
        body {
            background-color: #fff;
            margin: 0;
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            width: 20px;
            height: 20px;
            background-color: red;
            color: white;
            font-size: 12px;
            font-weight: bold;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2px;
        }

        a {
            position: relative;
            text-decoration: none;
            color: inherit;
        }

        .bi-bell {
            font-size: 24px; /* يمكنك تعديل حجم الأيقونة */
        }
        /* Sidebar Styles */
        .sidebar {
            background: #132029;
            border-right: 1px solid #ddd;
            padding-top: 1rem;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.05);
        }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 12px 20px;
                color: #fafafa;
                text-decoration: none;
                font-weight: 500;
                transition: 0.2s ease-in-out;
                border-radius: 10px;
            }

            .sidebar h4 {
                color: #fafafa;
            }

            .sidebar a:hover {
                background-color: #606060;
            }

            .sidebar a i {
                font-size: 20px;
                margin-right: 10px;
            }

        /* Mobile Bottom Navigation */
        .sidebar-bottom {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: #131313;
            border-top: 1px solid #ddd;
            z-index: 1050;
            display: flex;
            justify-content: space-around;
            padding: 10px 0;
            box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
        }

            .sidebar-bottom a {
                font-size: 22px;
                color: #fafafa;
                text-decoration: none;
                transition: color 0.3s;
            }

                .sidebar-bottom a:hover {
                    color: #272727;
                }

        /* Main Content */
        main {
            min-height: 100vh;
            background-color: #fdfdfd;
        }

        .unread-count {
            background-color: red;
            color: white;
            font-size: 0.75rem;
            padding: 2px 6px;
            border-radius: 50%;
            margin-left: 5px;
            vertical-align: middle;
            font-weight: bold;
        }

    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar for desktop -->
            <nav class="col-md-3 col-lg-2 sidebar d-none d-md-block">

                <a asp-action="Explore" asp-controller="Post" asp-area="ContentCreator" class="d-flex justify-content-start align-items-center mb-4 gap-2">
                    <div>
                        <img class="rounded-circle" src="~/images/uploadimgs/logoblogapp.jpg" alt="logo" width="40" height="40" />
                    </div>
                    <h4 class="m-0">Blog App</h4>
                </a>

                <a asp-action="Index" asp-controller="Home">
                    <i class="bi bi-speedometer2"></i><span> Dashboard</span>
                </a>

                <a asp-action="Index" asp-controller="Users">
                    <i class="bi bi-people"></i><span> Manage Users</span>
                </a>

                <a asp-action="Categories" asp-controller="Home">
                    <i class="bi bi-tags"></i><span> Categories</span>
                </a>
                <a asp-action="Index" asp-controller="Messages" asp-area="Admin">
                    <i class="bi bi-chat-dots"></i> <span>Messages</span>
                </a>

                <hr class="text-white" />

                <a asp-controller="Auth" asp-area="" asp-action="SignOut" class="text-danger">
                    <i class="bi bi-box-arrow-right"></i><span> Sign Out</span>
                </a>
            </nav>

            <!-- Main content -->
            <main class="col-12 col-md-9 col-lg-10 px-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bottom nav for mobile -->
    <div class="sidebar-bottom d-flex d-md-none">
        <a asp-action="Index" asp-controller="Home"><i class="bi bi-speedometer2"></i></a>
        <a asp-action="Index" asp-controller="Users"><i class="bi bi-people"></i></a>
   
        <a asp-action="Categories" asp-controller="Home"><i class="bi bi-tags"></i></a>
        <a asp-action="Index" asp-controller="Messages" asp-area="Admin"><i class="bi bi-chat-dots"></i></a>

    

       
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
    <script>
        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-top-right",
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000"
        };

        $(function () {
        @if (TempData["Success"] != null)
        {
                <text>toastr.success("@TempData["Success"]");</text>
        }
        @if (TempData["Error"] != null)
        {
                <text>toastr.error("@TempData["Error"]");</text>
        }
        @if (TempData["Info"] != null)
        {
                <text>toastr.info("@TempData["Info"]");</text>
        }
        });
    </script>

</body>
</html>
