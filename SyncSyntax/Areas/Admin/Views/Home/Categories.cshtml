@{
    ViewData["Title"] = "Categories";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Categories</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#categoryModal" onclick="openAddModal()">Add New Category</button>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Posts Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="categoriesTable"></tbody>
    </table>
</div>

<!-- Modal Add/Edit -->
<div class="modal fade" id="categoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="categoryForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="categoryModalLabel">Add Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="categoryId" />
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Name</label>
                        <input type="text" class="form-control" name="Name" id="categoryName" required />
                    </div>
                    <div class="mb-3">
                        <label for="categoryDesc" class="form-label">Description</label>
                        <textarea class="form-control" name="Description" id="categoryDesc" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        loadCategories();

        $("#categoryForm").submit(function(e){
            e.preventDefault();
            var formData = $(this).serialize();
            $.post('@Url.Action("Save", "Category")', formData, function(res){
                if(res.success){
                    $('#categoryModal').modal('hide');
                    $('.modal-backdrop').remove();

                    loadCategories();

                    if($('#categoryId').val() === '') {
                        Swal.fire('Added!', 'Category has been added successfully.', 'success');
                    } else {
                        Swal.fire('Updated!', 'Category has been updated successfully.', 'success');
                    }
                }
            });
        });
    });
        $('#categoryModal').on('hidden.bs.modal', function () {
        $(this).find('form')[0].reset();
    });
    function loadCategories(){
        $.get('@Url.Action("List", "Category")', function(data){
            var tbody = '';
            data.forEach(cat => {
                tbody += `
                    <tr>
                        <td>${cat.name}</td>
                        <td>${cat.description}</td>
                        <td>${cat.postsCount}</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-1"
                                onclick="openEditModal(${cat.id},'${cat.name}','${cat.description}')"
                                data-bs-toggle="modal" data-bs-target="#categoryModal">
                                Edit
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteCategory(${cat.id}, '${cat.name}')">Delete</button>
                        </td>
                    </tr>`;
            });
            $("#categoriesTable").html(tbody);
        });
    }

    function openAddModal(){
        $('#categoryModalLabel').text('Add Category');
        $('#categoryId').val('');
        $('#categoryName').val('');
        $('#categoryDesc').val('');
    }

    function openEditModal(id, name, desc){
        $('#categoryModalLabel').text('Edit Category');
        $('#categoryId').val(id);
        $('#categoryName').val(name);
        $('#categoryDesc').val(desc);
    }

    function deleteCategory(id, name){
        Swal.fire({
            title: `Are you sure you want to delete "${name}"?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if(result.isConfirmed){
                $.post('@Url.Action("Delete", "Category")', { id: id }, function(res){
                    if(res.success){
                        loadCategories();
                        Swal.fire('Deleted!', 'Category has been deleted successfully.', 'success');
                    }
                });
            }
        });
    }
</script>
