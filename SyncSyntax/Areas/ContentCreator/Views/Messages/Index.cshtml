 
@model ChatViewModel

<div class="chat-list">
    <div class="search-bar">
        <input type="text" id="searchInput" class="form-control" placeholder="Search for a conversation..." onkeyup="filterConversations()" />
    </div>

    @if (ViewData["Message"] != null)
    {
        <p class="no-messages">@ViewData["Message"]</p>
    }



    @{
        var previousUserIds = new List<string>();
    }

    @if (Model.Conversations != null && Model.Conversations.Any())
    {
        <h5 class="section-title">Latest Conversations</h5>

    
        <div id="conversationsList">
            @foreach (var conversation in Model.Conversations)
            {
                var otherUserId = conversation.SenderId == Model.CurrentUserId ? conversation.ReceiverId : conversation.SenderId;
                previousUserIds.Add(otherUserId);

                var otherUser = Model.OtherUsers.FirstOrDefault(u => u.Id == otherUserId);

                if (otherUser != null)
                {
                    <div class="chat-preview" data-username="@otherUser.FirstName @otherUser.LastName">
                        <a href="@Url.Action("Chat", "Messages", new { userId = otherUser.Id })">
                            <div class="chat-user">
                                <img src="@otherUser.ProfilePicture" class="profile-img" />
                                <div class="chat-info">
                                    <span class="username">@otherUser.FirstName @otherUser.LastName</span>
                                    <small>@conversation.Content</small>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    }

 
    <hr class="divider" />


    @if (Model.AvailableUsers != null)
    {
        var newUsers = Model.AvailableUsers
        .Where(u => !previousUserIds.Contains(u.Id))
        .ToList();

        @if (newUsers.Any())
        {
            @if (newUsers.Any(u => u.FirstName.Equals("Admin", StringComparison.OrdinalIgnoreCase)))
            {
                <div class="start-new-chat">
                    <h4>Start New Conversations</h4>
                    @foreach (var user in newUsers)
                    {
                        <div class="chat-preview new-chat">
                            <a href="@Url.Action("Chat", "Messages", new { userId = user.Id })">
                                <div class="chat-user">
                                    <img src="@user.ProfilePicture" class="profile-img" />
                                    <div class="chat-info">
                                        <span class="username">@user.FirstName @user.LastName</span>
                                        <small>    💡 If you want to improve the site, add new features, or suggest enhancements, feel free to send us your ideas!</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>


            }
         else{
                <div class="start-new-chat">
                    <h4>Start New Conversations</h4>
                    @foreach (var user in newUsers)
                    {
                        <div class="chat-preview new-chat">
                            <a href="@Url.Action("Chat", "Messages", new { userId = user.Id })">
                                <div class="chat-user">
                                    <img src="@user.ProfilePicture" class="profile-img" />
                                    <div class="chat-info">
                                        <span class="username">@user.FirstName @user.LastName</span>
                                        <small>Start new conversation</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
         }
        }
    }

</div>


<style>
    .chat-list {
        padding: 20px;
        background-color: #fafafa;
    }

    .section-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 15px;
        color: #444;
    }

    .divider {
        margin: 30px 0;
        border: none;
        border-top: 1px solid #ddd;
    }

    .no-messages {
        color: #888;
        text-align: center;
        font-size: 16px;
    }

    .chat-preview {
        display: flex;
        align-items: center;
        background-color: #fff;
        margin-bottom: 15px;
        padding: 12px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .chat-preview:hover {
            background-color: #f8f8f8;
            transform: scale(1.02);
        }

    .chat-user {
        display: flex;
        align-items: center;
    }

    .profile-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 15px;
    }

    .chat-info {
        display: flex;
        flex-direction: column;
    }

    .username {
        font-weight: bold;
        font-size: 14px;
        color: #333;
    }

    .last-message {
        color: #999;
        font-size: 12px;
        margin-top: 5px;
    }

    .start-new-chat {
        text-align: center;
        background-color: #f8f8f8;
        padding: 20px;
        border-radius: 10px;
    }

        .start-new-chat h4 {
            font-size: 18px;
            color: #555;
            margin-bottom: 20px;
        }

    .new-chat {
        background-color: #fff;
        margin-bottom: 12px;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

        .new-chat a {
            display: flex;
            align-items: center;
        }

        .new-chat .profile-img {
            width: 45px;
            height: 45px;
            margin-right: 10px;
        }

        .new-chat .chat-info {
            display: flex;
            flex-direction: column;
        }

        .new-chat .username {
            font-weight: bold;
            font-size: 14px;
        }

        .new-chat .last-message {
            color: #888;
            font-size: 12px;
        }
</style>
<script>
function filterConversations() {
    var input = document.getElementById('searchInput');
    var filter = input.value.toLowerCase();
    var conversations = document.querySelectorAll('.chat-preview');

  
    if (filter === "") {
        conversations.forEach(function(conversation) {
            conversation.style.display = '';
        });
    } else {
        conversations.forEach(function(conversation) {
            var username = conversation.getAttribute('data-username');

       
            if (username && username.toLowerCase().indexOf(filter) > -1) {
                conversation.style.display = '';
            } else {
                conversation.style.display = 'none';
            }
        });
    }
}
</script>

