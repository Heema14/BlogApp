@model PostDetailViewModel

@{
    ViewData["Title"] = Model.Post.Title;
}
<style>
    .post-detail-container {
        max-width: 1000px;
        margin: 40px auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        font-family: 'Segoe UI', sans-serif;
    }

    .post-left {
        border-radius: 16px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
        padding: 0;
    }

        .post-left img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

    .post-meta {
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        font-size: 14px;
    }

        .post-meta i {
            margin-right: 6px;
        }

        .post-meta .meta-item {
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            color: #444;
            font-weight: 500;
        }

        .post-meta .meta-user {
            font-weight: bold;
            color: #007bff;
        }

    .post-right {
        background: #fff;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
    }

        .post-right h1 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .post-right .post-date {
            color: #999;
            font-size: 14px;
            margin-bottom: 15px;
        }

    .comment-card {
        border: 1px solid #eaeaea;
        padding: 12px 16px;
        border-radius: 10px;
        margin-bottom: 10px;
        background-color: #fafafa;
    }

        .comment-card h5 {
            margin-bottom: 5px;
        }

        .comment-card small {
            color: #777;
        }

    .no-comments {
        color: #999;
        font-style: italic;
    }

    .focus-mode {
        background-color: #f5f5dc;
        color: #333;
    }

        .focus-mode .post-detail-container {
            background-color: #f5f5dc;
            color: #333;
            padding: 20px;
            border-radius: 10px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .focus-mode body {
            background-color: #f5f5dc;
            transition: background-color 0.3s ease;
        }

</style>

<div class="post-detail-container">
    <!-- Left side -->
    <div class="post-left">
        <img src="@Model.Post.FeatureImagePath" alt="@Model.Post.Title" />
        <div class="post-meta">

            <div class="meta-item like-btn"
                 data-postid="@Model.Post.Id"
                 style="cursor:pointer;">
                <i id="likeIcon-@Model.Post.Id" class="fa fa-heart"
                   style="color:@(Model.UserLikedPost ? "red" : "gray");"></i>
                <span id="likesCount-@Model.Post.Id">@Model.Post.LikesCount</span>
            </div>


            <div class="meta-item">
                <i class="bi bi-eye"></i>
                <span>@Model.Post.Views</span>
            </div>

            <div class="meta-item meta-user">
                @Model.Post.UserName
            </div>

        </div>
    </div>

    <!-- Right side -->
    <div class="post-right">
        <button id="focusModeBtn" class="btn btn-outline-secondary mb-3">Focus Mode</button>

        <h1>@Model.Post.Title</h1>
        <div class="post-date">Published on @Model.Post.CreatedAt.ToString("MMMM dd, yyyy")</div>

        <div class="post-content mb-4">
            @Html.Raw(Model.Post.Content)
        </div>

        <h3>Comments</h3>
        @if (Model.Post.Comments?.Any() ?? false)
        {
            <div class="comments-section mb-4" id="comments-section-@Model.Post.Id">
                @foreach (var comment in Model.Post.Comments)
                {
                    var isCurrentUser = comment.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier);
                    <div class="comment-card" id="comment-@comment.Id">
                        <h5>@comment.User?.UserName</h5>
                        <small>@comment.CommentDate.ToString("M/dd/yyyy, h:mm tt")</small>
                        <p>@comment.Content</p>
                        @if (isCurrentUser)
                        {
                            <button class="btn btn-sm btn-primary edit-comment-btn"
                                    data-commentid="@comment.Id"
                                    data-content="@comment.Content">
                                Edit
                            </button>

                            <button class="btn btn-sm btn-danger delete-comment-btn" data-commentid="@comment.Id">Delete</button>
                        }
                    </div>
                }
            </div>


        }
        else
        {
            <p class="no-comments">No comments yet. Be the first to comment!</p>
        }

        @if (User.Identity.IsAuthenticated)
        {
            <form class="comment-form" data-postid="@Model.Post.Id">
                <div class="form-group mb-2">
                    <label for="Content">Add Comment</label>
                    <textarea name="Content" rows="3" required class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary px-4">Share comment</button>
            </form>
        }

    </div>

</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/post-like.js"></script>

<script>
    const focusBtn = document.getElementById("focusModeBtn");
    focusBtn.addEventListener("click", () => {
        document.body.classList.toggle("focus-mode");
        focusBtn.textContent = document.body.classList.contains("focus-mode")
            ? "Exit Focus Mode"
            : "Focus Mode";
    });

    $(document).ready(function () {
        $('.comment-form').each(function () {
            var $form = $(this);
            var postId = $form.data('postid');

            // إنشاء اتصال SignalR
            var connection = new signalR.HubConnectionBuilder()
                .withUrl("/commentHub?postId=" + postId)
                .build();

            // استقبال تعليق جديد من SignalR (للمستخدمين الآخرين)
    connection.on("ReceiveComment", function (userName, content, date, commentId, isCurrentUser, userId) {
        var currentUserId = '@User.FindFirstValue(ClaimTypes.NameIdentifier)';

        // تجاهل التعليق إذا هو لنفس المستخدم
        if(userId === currentUserId) return;

        var deleteBtnHtml = isCurrentUser
            ? `<button class="btn btn-sm btn-danger delete-comment-btn" data-commentid="${commentId}">Delete</button>`
            : '';

        var editBtnHtml = isCurrentUser
            ? `<button class="btn btn-sm btn-primary edit-comment-btn" data-commentid="${commentId}" data-content="${content}">Edit</button>`
            : '';

        var commentHtml = `
            <div class="comment-card" id="comment-${commentId}">
                <h5>${userName}</h5>
                <small>${date}</small>
                <p class="comment-content">${content}</p>
                ${editBtnHtml} ${deleteBtnHtml}
            </div>`;
        $('#comments-section-' + postId).append(commentHtml);
    });

            // بدء الاتصال
            connection.start().catch(err => console.error(err.toString()));

            // إرسال تعليق (Ajax + SignalR)
            $form.submit(function (e) {
                e.preventDefault();
                var content = $form.find('textarea[name="Content"]').val();
                if (!content) return;

                $.ajax({
                    url: '/ContentCreator/Post/AddComment',   // 🔹 غيرها لمسارك في الـ Controller
                    method: 'POST',
                    data: { postId: postId, content: content },
                    success: function (res) {
                        // عرض التعليق مباشرة (من الرد)
                        var commentHtml = `
                            <div class="comment-card" id="comment-${res.commentId}">
                                <h5>${res.userName}</h5>
                                <small>${res.date}</small>
                                <p class="comment-content">${res.content}</p>
                                <button class="btn btn-sm btn-primary edit-comment-btn" data-commentid="${res.commentId}" data-content="${res.content}">Edit</button>
                                <button class="btn btn-sm btn-danger delete-comment-btn" data-commentid="${res.commentId}">Delete</button>
                            </div>`;
                        $('#comments-section-' + postId).append(commentHtml);

                        $form.find('textarea[name="Content"]').val('');

                        // إشعار SignalR للباقي
                        connection.invoke("BroadcastComment", res.content, postId)
                            .catch(err => console.error(err.toString()));
                    },
                    error: function () {
                        Swal.fire('Error', 'Could not add comment.', 'error');
                    }
                });
            });

            // حذف تعليق
            $(document).on('click', '.delete-comment-btn', function () {
                var commentId = $(this).data('commentid');
                Swal.fire({
                    title: 'Are you sure?',
                    text: "Do you really want to delete this comment?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        connection.invoke("DeleteComment", commentId)
                            .then(() => {
                                $('#comment-' + commentId).remove();
                                Swal.fire('Deleted!', 'The comment has been deleted.', 'success');
                            })
                            .catch(err => console.error(err.toString()));
                    }
                });
            });

            // تعديل تعليق
            $(document).on('click', '.edit-comment-btn', function () {
                var commentId = $(this).data('commentid');
                var currentContent = $(this).data('content');

                Swal.fire({
                    title: 'Edit your comment',
                    input: 'textarea',
                    inputValue: currentContent,
                    showCancelButton: true,
                    confirmButtonText: 'Save',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed && result.value) {
                        connection.invoke("EditComment", commentId, result.value)
                            .catch(err => console.error(err.toString()));
                    }
                });
            });

            // استقبال تعديل من SignalR
            connection.on("CommentEdited", function (commentId, newContent, newDate) {
                var commentCard = $('#comment-' + commentId);
                commentCard.find('.comment-content').text(newContent);
                commentCard.find('small').text(newDate);
                commentCard.find('.edit-comment-btn').attr('data-content', newContent);
                Swal.fire('Updated!', 'Your comment has been updated.', 'success');
            });

            // استقبال حذف من SignalR
            connection.on("CommentDeleted", function (commentId) {
                $('#comment-' + commentId).remove();
            });
        });
    });
</script>

