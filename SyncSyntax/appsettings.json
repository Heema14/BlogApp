{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",
 
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Fatal",
        "System": "Fatal"
      }
    },

    "Enrich": [ "FromLogContext" ],

    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "[{Level}] {Timestamp:HH:mm} >> {Message} {Properties:j}{NewLine}{Exception}",
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "uploading": {
    "FolderPath": "images/uploadImgs",
    "allowedFileExtension": [ ".jpg", ".jpeg", ".png" ],
    "allowedFileSize": 3
  },


  "ConnectionStrings": {
    //"DefaultConnection": "Data Source=ibrahim\\ibrahim;Initial Catalog=BlogDb;Integrated Security=True;Trust Server Certificate=True"

    "DefaultConnection": "Data Source=DESKTOP-5H9Q3A4\\SQLEXPRESS;Initial Catalog=BlogDb;Integrated Security=True;Trust Server Certificate=True"
  }
}
